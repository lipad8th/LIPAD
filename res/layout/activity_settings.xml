<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SettingsActivity">

    <!-- seedPrice, ipAddress -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu_bold"
        android:padding="12dp"
        android:text="Settings"
        android:textColor="@color/colorText"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/seedPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/seedPriceEditText"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Price of seed ðŸŒ±"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/seed2PriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/seed2PriceEditText"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Price of seed ðŸŒ¾"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ipAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ipAddEditText"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="IP address"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seedPriceEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="9"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/seed2PriceEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seedPriceEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="9"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ipAddEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seed2PriceEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="9"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="16sp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ipAddEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/buttondark"
        android:fontFamily="@font/ubuntu_bold"
        android:text="SAVE" />


</RelativeLayout>