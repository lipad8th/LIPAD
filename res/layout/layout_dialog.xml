<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="8dp">

    <EditText
        android:id="@+id/fieldNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="11"
        android:fontFamily="@font/ubuntu_medium"
        android:hint="Field name"
        android:inputType="text" />

    <EditText
        android:id="@+id/rowEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNameText"
        android:ems="5"
        android:fontFamily="@font/ubuntu_medium"
        android:hint="Rows"
        android:inputType="number" />

    <TextView
        android:id="@+id/multiplicationEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNameText"
        android:layout_toEndOf="@+id/rowEditText"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingTop="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:text="Ã—" />

    <EditText
        android:id="@+id/columnEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNameText"
        android:layout_toRightOf="@id/multiplicationEmoji"
        android:ems="5"
        android:fontFamily="@font/ubuntu_medium"
        android:hint="Columns"
        android:inputType="number"/>

</RelativeLayout>